<template>
  <div class="novaLicitacija_li">
    <v-row justify="center">
      <v-col cols="12" sm="10" md="5" class="pa-0">
        <v-card class="mx-2 my-4 mx-sm-4 my-sm-6 my-md-5" elevation="5">
          <v-card-title> Nova licitacija </v-card-title>
          <v-form ref="form_novaLicitiacija" v-model="valid" lazy-validation>
          </v-form>
          <v-text-field
            v-model="nudim"
            outlined
            label="Nudim"
            counter
            maxlength="50"
            :rules="rules"
            request
          ></v-text-field>
          <v-text-field
            v-model="grupa"
            outlined
            label="grupa-select treba"
            counter
            maxlength="50"
            :rules="rules"
            request
          ></v-text-field>
          <v-text-field
            v-model="pocetna_cena"
            outlined
            label="Početna cena"
            counter
            maxlength="50"
            :rules="rules"
            request
          ></v-text-field>
          <v-textarea
            v-model="opis_licitacije"
            outlined
            :rules="rules"
            label="Opis licitacije"
            counter
            rows="8"
            maxlength="3000"
            required
          ></v-textarea>

          <v-card-actions>
            <v-spacer></v-spacer>
            <v-btn color="success" :disabled="!valid" min-width="80"
              >Postavi</v-btn
            >
            <v-btn color="error" min-width="80">Obriši</v-btn>
          </v-card-actions>
        </v-card>
      </v-col>
    </v-row>
  </div>
</template>

<script>
export default {
  data() {
    return {
      valid: false,
      nudim: "",
      grupa: "",
      pocetna_cena: "",
      opis_licitacije: "",
      rules: [
        (v) => !!v || "Molimo Vas popunite polje",
        (v) => (v && v.length >= 4) || "Polje mora da ima 4 ili više karaktera",
        (v) => (v && !!v.trim()) || "Ne mozete da ostavite prazna polja",
      ],
    };
  },
};
</script>

